# include<avr/delay.h>
#include "Types.h"
#include"LCDc.h"

int  main (void)
{

	while(1){
		/*Init LCD */
		LCD_vidInit();

		/*writ CGRAM this order  */
		LCD_vidwriteCommand(0x40);

		/*the draw Arabic ع */
		LCD_vidwriteCharacter(0x00);
		LCD_vidwriteCharacter(0xFF);
		LCD_vidwriteCharacter(0x10);
		LCD_vidwriteCharacter(0x10);
		LCD_vidwriteCharacter(0x10);
		LCD_vidwriteCharacter(0xFF);
		LCD_vidwriteCharacter(0x00);
		LCD_vidwriteCharacter(0x00);

		/*the draw Arabic ل */

		LCD_vidwriteCharacter(0x04);
		LCD_vidwriteCharacter(0x04);
		LCD_vidwriteCharacter(0x04);
		LCD_vidwriteCharacter(0x04);
		LCD_vidwriteCharacter(0x04);
		LCD_vidwriteCharacter(0x1F);
		LCD_vidwriteCharacter(0x00);
		LCD_vidwriteCharacter(0x00);

		/*the draw Arabic ى */
		LCD_vidwriteCharacter(0x00);
		LCD_vidwriteCharacter(0x00);
		LCD_vidwriteCharacter(0x00);
		LCD_vidwriteCharacter(0x00);
		LCD_vidwriteCharacter(0x00);
		LCD_vidwriteCharacter(0x11);
		LCD_vidwriteCharacter(0x11);
		LCD_vidwriteCharacter(0xFF);

		/*the draw smail  */
		LCD_vidwriteCharacter(0x00);
		LCD_vidwriteCharacter(0x00);
		LCD_vidwriteCharacter(0x0A);
		LCD_vidwriteCharacter(0x00);
		LCD_vidwriteCharacter(0x11);
		LCD_vidwriteCharacter(0x0E);
		LCD_vidwriteCharacter(0x00);
		LCD_vidwriteCharacter(0x00);




		//LCD_vidwriteCharacter(1);

		/*write the row one and start 0  */

		LCD_vidsetposition(1,12);
		/*print smail*/
		LCD_vidwriteCharacter(3);
		/*print ى*/
		LCD_vidwriteCharacter(2);
		/*print ل*/
		LCD_vidwriteCharacter(1);
		/*print ع*/
		LCD_vidwriteCharacter(0);






		/*write the row two and start 0  */
		LCD_vidsetposition(2,3);
		/*print smail*/
		LCD_vidwriteCharacter(3);
		//LCD_vidwriteCharacter('a');
		// LCD_vidWritnumber(100);

		/*write the row two and start 0  */
		LCD_vidsetposition(2,0);

		/*print array that */
		u8 arr[]="ALi";
		LCD_vidwriteString(arr);
		_delay_ms(10000);
		////////////////////////////////////////////////////////////
		LCD_vidClear(0xFF);

		_delay_ms(10);

		LCD_vidsetposition(1,8);
		/*print smail*/
		LCD_vidwriteCharacter(3);
		/*print ى*/
		LCD_vidwriteCharacter(2);
		/*print ل*/
		LCD_vidwriteCharacter(1);
		/*print ع*/
		LCD_vidwriteCharacter(0);


		/*write the row two and start 0  */
		LCD_vidsetposition(2,7);
		/*print smail*/
		LCD_vidwriteCharacter(3);
		//LCD_vidwriteCharacter('a');
		// LCD_vidWritnumber(100);

		/*write the row two and start 0  */
		LCD_vidsetposition(2,4);

		/*print array that */
		//u8 arr[]="ALi";
		LCD_vidwriteString(arr);
		_delay_ms(10000);

		/////////////////////
		LCD_vidClear(0xFF);

		_delay_ms(10);

		LCD_vidsetposition(1,4);
		/*print smail*/
		LCD_vidwriteCharacter(3);
		/*print ى*/
		LCD_vidwriteCharacter(2);
		/*print ل*/
		LCD_vidwriteCharacter(1);
		/*print ع*/
		LCD_vidwriteCharacter(0);


		/*write the row two and start 0  */
		LCD_vidsetposition(2,11);
		/*print smail*/
		LCD_vidwriteCharacter(3);
		//LCD_vidwriteCharacter('a');
		// LCD_vidWritnumber(100);

		/*write the row two and start 0  */
		LCD_vidsetposition(2,8);

		/*print array that */
		//u8 arr[]="ALi";
		LCD_vidwriteString(arr);
		_delay_ms(10000);

		/////////////
		LCD_vidClear(0xFF);

		_delay_ms(10);

		LCD_vidsetposition(1,0);
		/*print smail*/
		LCD_vidwriteCharacter(3);
		/*print ى*/
		LCD_vidwriteCharacter(2);
		/*print ل*/
		LCD_vidwriteCharacter(1);
		/*print ع*/
		LCD_vidwriteCharacter(0);


		/*write the row two and start 0  */
		LCD_vidsetposition(2,15);
		/*print smail*/
		LCD_vidwriteCharacter(3);
		//LCD_vidwriteCharacter('a');
		// LCD_vidWritnumber(100);

		/*write the row two and start 0  */
		LCD_vidsetposition(2,12);

		/*print array that */
		//u8 arr[]="ALi";
		LCD_vidwriteString(arr);
		_delay_ms(10000);


		/* back  */
		////////////////

		LCD_vidClear(0xFF);

		_delay_ms(10);

		LCD_vidsetposition(1,4);
		/*print smail*/
		LCD_vidwriteCharacter(3);
		/*print ى*/
		LCD_vidwriteCharacter(2);
		/*print ل*/
		LCD_vidwriteCharacter(1);
		/*print ع*/
		LCD_vidwriteCharacter(0);


		/*write the row two and start 0  */
		LCD_vidsetposition(2,11);
		/*print smail*/
		LCD_vidwriteCharacter(3);
		//LCD_vidwriteCharacter('a');
		// LCD_vidWritnumber(100);

		/*write the row two and start 0  */
		LCD_vidsetposition(2,8);

		/*print array that */
		//u8 arr[]="ALi";
		LCD_vidwriteString(arr);
		_delay_ms(10000);

		/////////back to 2

		LCD_vidClear(0xFF);

			_delay_ms(10);

			LCD_vidsetposition(1,8);
			/*print smail*/
			LCD_vidwriteCharacter(3);
			/*print ى*/
			LCD_vidwriteCharacter(2);
			/*print ل*/
			LCD_vidwriteCharacter(1);
			/*print ع*/
			LCD_vidwriteCharacter(0);


			/*write the row two and start 0  */
			LCD_vidsetposition(2,7);
			/*print smail*/
			LCD_vidwriteCharacter(3);
			//LCD_vidwriteCharacter('a');
			// LCD_vidWritnumber(100);

			/*write the row two and start 0  */
			LCD_vidsetposition(2,4);

			/*print array that */
			//u8 arr[]="ALi";
			LCD_vidwriteString(arr);
			_delay_ms(10000);

			/// back 3
			LCD_vidClear(0xFF);
			_delay_ms(10);


			/*write the row one and start 0  */

				LCD_vidsetposition(1,12);
				/*print smail*/
				LCD_vidwriteCharacter(3);
				/*print ى*/
				LCD_vidwriteCharacter(2);
				/*print ل*/
				LCD_vidwriteCharacter(1);
				/*print ع*/
				LCD_vidwriteCharacter(0);






				/*write the row two and start 0  */
				LCD_vidsetposition(2,3);
				/*print smail*/
				LCD_vidwriteCharacter(3);
				//LCD_vidwriteCharacter('a');
				// LCD_vidWritnumber(100);

				/*write the row two and start 0  */
				LCD_vidsetposition(2,0);

				/*print array that */
				//u8 arr[]="ALi";
				LCD_vidwriteString(arr);
				_delay_ms(100);




	}


}
