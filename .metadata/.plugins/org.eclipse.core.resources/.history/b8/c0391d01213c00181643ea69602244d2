#include <avr/delay.h>
#include"types.h"
#include "Register.h"
#include <avr/io.h>

int sevenfor_60();
int sevenfor_10();


int main(void)
{
	DDRA = 0xff;
	DDRB = 0xff;
	DDRC = 0b11111111;


	while(1)
	{

		PORTC = 0b00000010;
		PORTA = 0b00000100; // Number 0
		PORTC = 0b00000001;
		_delay_ms(1000);
		PORTC = 0b00000001;
		sevenfor_60();      // Number 0 to 9
		//////////////
		PORTC = 0b00000010;
		PORTA = 0b11110100; // Number 1
		_delay_ms(1000);

		PORTC = 0b00000001;
		sevenfor_60();

		PORTA = 0b00100010; // Number 2
		_delay_ms(1000);

		PORTC = 0b00000001;
		sevenfor_60();

		PORTA = 0b00000100; // Number 0
		_delay_ms(1000);


	}

}

int sevenfor_60()
{

	char array[]={0b00000100,0b11110100,0b00100010,0b01100000,0b11010000,0b01001000,0b00001000,0b11100100,0b00000000,0b01000000,0b00000100};

	//char array[]={5,159,35,11,153,73,65,31,1,9};

	for(int i=0;i<10;i++)
	{
		PORTA = array[i];
		_delay_ms(1000);
	}

	return 0;
}





